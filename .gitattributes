# -----------------------------------------------
# ----  General  --------------------------------
# -----------------------------------------------

*        text=auto

# -----------------------------------------------
# ----  Images  ---------------------------------
# -----------------------------------------------

*.png   -text
*.jpg   -text
*.ico   -text

# -----------------------------------------------
# ----  Shell  ----------------------------------
# -----------------------------------------------

*.sh    test=bash

# -----------------------------------------------
# ----  Rust  -----------------------------------
# -----------------------------------------------

*.rs     text    diff=rust
*.cc     text    diff=cpp
*.hh     text    diff=cpp

# -----------------------------------------------
# ----  Documents  ------------------------------
# -----------------------------------------------

*.tex    text    diff=tex
